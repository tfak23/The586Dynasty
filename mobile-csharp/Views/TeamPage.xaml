<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mobile.CSharp.ViewModels"
             x:Class="Mobile.CSharp.Views.TeamPage"
             x:DataType="vm:TeamViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="10">
        
        <!-- Error Message -->
        <Frame Grid.Row="0" 
               IsVisible="{Binding HasError}"
               BackgroundColor="LightCoral"
               Margin="0,0,0,10">
            <Label Text="{Binding ErrorMessage}" 
                   TextColor="White"
                   FontAttributes="Bold"/>
        </Frame>

        <!-- Salary Cap Summary -->
        <Frame Grid.Row="1" Padding="15" Margin="0,0,0,10">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                <Label Grid.Row="0" Grid.Column="0"
                       Text="Total Salary:"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label Grid.Row="0" Grid.Column="1"
                       Text="{Binding TotalSalary, StringFormat='${0:F2}'}"
                       FontSize="16"
                       HorizontalOptions="End"/>
                
                <Label Grid.Row="1" Grid.Column="0"
                       Text="Remaining Cap:"
                       FontSize="16"
                       FontAttributes="Bold"/>
                <Label Grid.Row="1" Grid.Column="1"
                       Text="{Binding RemainingCap, StringFormat='${0:F2}'}"
                       FontSize="16"
                       HorizontalOptions="End"
                       TextColor="{Binding RemainingCap, Converter={StaticResource CapColorConverter}}"/>
            </Grid>
        </Frame>

        <!-- Team Selector -->
        <Picker Grid.Row="2"
                Title="Select Team"
                ItemsSource="{Binding Teams}"
                ItemDisplayBinding="{Binding TeamName}"
                SelectedItem="{Binding SelectedTeam}"
                Margin="0,0,0,10"/>

        <!-- Contracts List -->
        <RefreshView Grid.Row="3"
                     Command="{Binding LoadTeamContractsCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding TeamContracts}">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" VerticalOptions="Center">
                        <Label Text="No contracts found"
                               FontSize="18"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="15" BorderColor="Gray">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Player.FullName}"
                                       FontSize="18"
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding Player.Position}"
                                       FontSize="14"
                                       TextColor="Gray"/>
                                
                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="{Binding YearsRemaining, StringFormat='{0} years remaining'}"
                                       FontSize="14"/>
                                
                                <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                       Text="{Binding Salary, StringFormat='${0:F2}'}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
