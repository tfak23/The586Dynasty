<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mobile.CSharp.ViewModels"
             x:Class="Mobile.CSharp.Views.ContractPage"
             x:DataType="vm:ContractViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*" Padding="10">
        
        <!-- Error Message -->
        <Frame Grid.Row="0" 
               IsVisible="{Binding HasError}"
               BackgroundColor="LightCoral"
               Margin="0,0,0,10">
            <Label Text="{Binding ErrorMessage}" 
                   TextColor="White"
                   FontAttributes="Bold"/>
        </Frame>

        <!-- Contracts List -->
        <RefreshView Grid.Row="1"
                     Command="{Binding LoadContractsCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding Contracts}">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" VerticalOptions="Center">
                        <Label Text="No contracts found"
                               FontSize="18"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="15" BorderColor="Gray">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Player.FullName}"
                                       FontSize="18"
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding Player.Team, StringFormat='Team: {0}'}"
                                       FontSize="14"
                                       TextColor="Gray"/>
                                
                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="{Binding StartSeason, StringFormat='Start: {0}'}"
                                       FontSize="14"/>
                                
                                <Label Grid.Row="3" Grid.Column="0"
                                       Text="{Binding EndSeason, StringFormat='End: {0}'}"
                                       FontSize="14"/>
                                
                                <StackLayout Grid.Row="0" Grid.Column="1" Grid.RowSpan="4" 
                                           VerticalOptions="Center"
                                           Spacing="5">
                                    <Label Text="{Binding Salary, StringFormat='${0:F2}'}"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           HorizontalOptions="End"/>
                                    <Label Text="{Binding YearsRemaining, StringFormat='{0} yrs'}"
                                           FontSize="14"
                                           HorizontalOptions="End"/>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
