<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Mobile.CSharp.ViewModels"
             x:Class="Mobile.CSharp.Views.FreeAgentPage"
             x:DataType="vm:FreeAgentViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,*" Padding="10">
        
        <!-- Error Message -->
        <Frame Grid.Row="0" 
               IsVisible="{Binding HasError}"
               BackgroundColor="LightCoral"
               Margin="0,0,0,10">
            <Label Text="{Binding ErrorMessage}" 
                   TextColor="White"
                   FontAttributes="Bold"/>
        </Frame>

        <!-- Search Bar -->
        <SearchBar Grid.Row="1"
                   Placeholder="Search players..."
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding SearchPlayersCommand}"
                   Margin="0,0,0,10"/>

        <!-- Free Agents List -->
        <RefreshView Grid.Row="2"
                     Command="{Binding LoadFreeAgentsCommand}"
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding FreeAgents}">
                <CollectionView.EmptyView>
                    <StackLayout Padding="20" VerticalOptions="Center">
                        <Label Text="No free agents found"
                               FontSize="18"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="15" BorderColor="Gray">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding FullName}"
                                       FontSize="18"
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding Team, StringFormat='Team: {0}'}"
                                       FontSize="14"
                                       TextColor="Gray"/>
                                
                                <Label Grid.Row="2" Grid.Column="0"
                                       Text="{Binding Age, StringFormat='Age: {0}'}"
                                       FontSize="14"/>
                                
                                <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                       Text="{Binding Position}"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>

</ContentPage>
