<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.CSharp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="The 586 Dynasty Logo"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to The 586 Dynasty!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Your fantasy football dynasty league management app"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Dynasty league management"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="LeagueButton"
                Text="View League History"
                SemanticProperties.Hint="Navigate to league history"
                Clicked="OnLeagueClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="TeamButton"
                Text="View My Team"
                SemanticProperties.Hint="Navigate to team management"
                Clicked="OnTeamClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
